    <script>
        function changeStyling( ) 
        { 
         /*var tag = document.getElementsByTagName("p");
         tag.style.color = "red" //will not work
         tag[0].style.fontSize = 25;
         tag[1].style.color = "green";
         tag[2].style.fontWeight = "bold";
         tag[3].style.fontStyle = "italic";
         tag[4].style.backgroundColor = "orange";*/

         //Another Way to access and manipulate
        var tag1=document.getElementsByTagName("p");

           for(var i=0; i<tag1.length;i++)
           {
               tag1[i].style.fontSize = 22;
               tag1[i].style.color = "green";
               tag1[i].style.backgroundColor = "gray";
           }
         }
    </script>
